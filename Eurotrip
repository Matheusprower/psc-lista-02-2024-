programa {
  funcao inicio() {
    real n1
    real n2
    real n3
    real n4
    inteiro n5
    escreva("EUROTRIP\nDigite o valor da viagem Brasil - Alemanha \n")
    leia(n1)
    escreva("Digite o valor da viagem Alemanha - Portugal\n")
    leia(n2)
    escreva("Digite o valor da viagem Portugal - Itália\n")
    leia(n3)
    escreva("Digite o valor da viagem Itália - Brasil\n")
    leia(n4)
    escreva("Digite o número de pessoas no grupo\n")
    leia(n5)
    escreva("\nO valor total da viagem vai ser: ", (n1+n2+n3)*n5, "\nO valor por pessoa será: ", n1+n2+n3, "\n\nCaso a viagem possua volta: ", (n1+n2+n3+n4)*n5, " no total e ", n1+n2+n3+n4, " por pessoa.")
  }
}
